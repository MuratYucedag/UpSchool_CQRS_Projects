@model GetStudentByIDQueryResult

@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<div class="container">
    <form method="post">
        <input type="hidden" asp-for="StudentID" />
        <br />
        <label>Öğrenci Adı</label>
        <input type="text" asp-for="Name" class="form-control" />
        <br />
        <label>Öğrenci Soyadı</label>
        <input type="text" asp-for="Surname" class="form-control" />
        <br />
        <label>Öğrenci Şehri</label>
        <input type="text" asp-for="City" class="form-control" />
        <br />
        <label>Öğrenci Yaşı</label>
        <input type="text" asp-for="Age" class="form-control" />
        <br />
        <button class="btn btn-outline-success">Öğrenciyi Güncelle</button>
    </form>
</div>